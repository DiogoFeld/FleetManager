@using FleetManager.Domain.Entities
@using Microsoft.AspNetCore.Mvc.Rendering

@model FleetManager.Domain.ViewData.ViewVehicle

<div class="container mt-4">
    <h1 class="mb-3">Create Vehicle</h1>

    <h4 class="mb-3">Vehicle</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="_Type" class="form-label"></label>
                    <select asp-for="_Type" asp-items="@ViewBag.VehiclesType" class="form-select"></select>
                    <span asp-validation-for="_Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NumberOfPassengers" class="form-label"></label>
                    <input asp-for="NumberOfPassengers" class="form-control" />
                    <span asp-validation-for="NumberOfPassengers" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Color" class="form-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Series" class="form-label"></label>
                    <input asp-for="Series" class="form-control" />
                    <span asp-validation-for="Series" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Number" class="form-label"></label>
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
